// Try creating a custom c_cpp_properties.json file from withing vscode itself and then modify it.
// The most important code to add is the one contained inside "includePath"
{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/godot-cpp/gen/include",
                "${workspaceFolder}/src"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.22000.0",
            // example for windows
            // "compilerPath": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.34.31933/bin/Hostx64/x64/cl.exe", 
            "compilerPath": "pat to the ecompiler",
            "cStandard": "c17",
            "cppStandard": "c++17"
            // "intelliSenseMode": "windows-msvc-x64"
        }
    ],
    "version": 4
}